<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/crd_list_product"
    android:layout_margin="3dp"
    app:cardElevation="2dp"
    android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_list_product"
                android:layout_width="80dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:layout_margin="8dp"
                android:src="@mipmap/ico_category"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170sp"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".4">

                    <TextView
                        android:fontFamily="@font/byekan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:text="نام محصول"
                        android:textColor="#442777"
                        android:id="@+id/txt_name_list_product"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".6"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#AB929797"
                        android:gravity="bottom"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="فی:"
                        android:textSize="12sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical|right"
                        android:fontFamily="@font/byekan"
                        android:textColor="#009688"
                        android:id="@+id/txt_fi_list_product"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#AB929797"
                        android:gravity="bottom"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="تعداد:"
                        android:textSize="12sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical|right"
                        android:fontFamily="@font/byekan"
                        android:textColor="#009688"
                        android:id="@+id/txt_qty_list_product"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#AB929797"
                        android:gravity="bottom"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="مبلغ:"
                        android:textSize="12sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical|right"
                        android:fontFamily="@font/byekan"
                        android:textColor="#009688"
                        android:id="@+id/txt_value_list_product"/>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

</android.support.v7.widget.CardView>