<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="تلفن"
        android:inputType="phone"
        android:id="@+id/edt_frguser_login_tel"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="رمز"
        android:id="@+id/edt_frguser_login_pass"/>

    <Button
        android:text="ورود"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_frguser_login_login"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:text="ثبت نام"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_frguser_login_register"/>
        <Button
            android:text="فراموشی رمز عبور"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_frguser_login_forget"/>

    </LinearLayout>

</LinearLayout>